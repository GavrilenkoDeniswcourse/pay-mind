<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".HomeFragment">

        <!-- Заголовок приложения -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayMind"
            android:textSize="28sp"
            android:textColor="#1F2937"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- МЕСТО ДЛЯ КАЛЕНДАРЯ (пустой блок) -->
        <View
            android:id="@+id/calendar_placeholder"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_title" />

        <!-- Текст-заглушка для календаря -->
        <TextView
            android:id="@+id/calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Календарь будет здесь"
            android:textSize="14sp"
            android:textColor="#6B7280"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/calendar_placeholder"
            app:layout_constraintBottom_toBottomOf="@id/calendar_placeholder" />

        <!-- Карточка "Предстоящие платежи" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/upcoming_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_placeholder">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Заголовок карточки -->
                <TextView
                    android:id="@+id/upcoming_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Предстоящие платежи"
                    android:textSize="18sp"
                    android:textColor="#1F2937"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Общая сумма -->
                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="1 378 ₽"
                    android:textSize="32sp"
                    android:textColor="#7C3AED"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/upcoming_title" />

                <!-- Подпись под суммой -->
                <TextView
                    android:id="@+id/total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Общая сумма:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_amount" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E5E7EB"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_label" />

                <!-- Иконка напоминаний (ПЕРЕД ТЕКСТОМ) -->
                <ImageView
                    android:id="@+id/reminder_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

                <!-- Количество напоминаний -->
                <TextView
                    android:id="@+id/reminders_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 напоминания"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/reminder_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Заголовок "Все платежи" -->
        <TextView
            android:id="@+id/all_payments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Все платежи"
            android:textSize="20sp"
            android:textColor="#1F2937"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcoming_card" />

        <!-- Список платежей -->
        <LinearLayout
            android:id="@+id/payments_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_payments_title">

            <!-- Платеж 1: Электричество -->
            <androidx.cardview.widget.CardView
                android:id="@+id/payment_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Первая строка: Название услуги и статус -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Левая часть: название и тип услуги -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvServiceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Электричество"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvServiceType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Услуга"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Правая часть: статус -->
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ожидает"
                            android:textColor="#FF9800"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/status_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Иконка календаря -->
                        <ImageView
                            android:id="@+id/ivCalendar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/calendar"
                            android:layout_marginEnd="12dp"
                            app:tint="#666666" />

                        <!-- Дата -->
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 ноября"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp" />

                        <!-- Сумма -->
                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="678 ₽"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Платеж 2: Яндекс музыка -->
            <androidx.cardview.widget.CardView
                android:id="@+id/payment_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Яндекс музыка"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/amount_2"
                        app:layout_constraintStart_toEndOf="@id/icon_2"
                        app:layout_constraintTop_toTopOf="@id/icon_2" />

                    <TextView
                        android:id="@+id/description_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Подписка • Ожидает"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/date_2"
                        app:layout_constraintStart_toStartOf="@id/title_2"
                        app:layout_constraintTop_toBottomOf="@id/title_2" />

                    <TextView
                        android:id="@+id/date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 ноября"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/description_2"
                        app:layout_constraintEnd_toStartOf="@id/amount_2"
                        app:layout_constraintTop_toBottomOf="@id/title_2" />

                    <TextView
                        android:id="@+id/amount_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350 ₽"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/icon_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/icon_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Платеж 3: ВК ПЛЭЙ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/payment_card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="ВК ПЛЭЙ"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/amount_3"
                        app:layout_constraintStart_toEndOf="@id/icon_3"
                        app:layout_constraintTop_toTopOf="@id/icon_3" />

                    <TextView
                        android:id="@+id/description_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Подписка • Оплачено"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/date_3"
                        app:layout_constraintStart_toStartOf="@id/title_3"
                        app:layout_constraintTop_toBottomOf="@id/title_3" />

                    <TextView
                        android:id="@+id/date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 ноября"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/description_3"
                        app:layout_constraintEnd_toStartOf="@id/amount_3"
                        app:layout_constraintTop_toBottomOf="@id/title_3" />

                    <TextView
                        android:id="@+id/amount_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350 ₽"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/icon_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/icon_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>