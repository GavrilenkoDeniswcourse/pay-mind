<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="16dp">

        <!-- Первая строка: Название услуги и статус -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <!-- Название услуги -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Статус -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Вторая строка: Категория и сумма -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <!-- Категория -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp" />

            <!-- Сумма -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Третья строка: Дата следующего списания -->
        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Четвертая строка: Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Кнопка Оплатить -->
            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="Оплатить"
                android:textColor="?attr/colorSurface"
                android:background="@drawable/button_pay_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                app:backgroundTint="@null"/>

            <!-- Кнопка Удалить -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="Удалить"
                android:textColor="?attr/colorOnSurface"
                android:background="@drawable/button_delete_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                app:backgroundTint="@null"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>